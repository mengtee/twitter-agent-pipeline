{
  "name": "twitter-agent-pipeline",
  "version": "0.1.0",
  "description": "Scrape trending tweets, rewrite with character voice via Claude, output for posting",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "scrape": "tsx src/index.ts scrape",
    "generate": "tsx src/index.ts generate",
    "review": "tsx src/index.ts review",
    "run:pipeline": "tsx src/index.ts run",
    "test": "vitest run",
    "test:watch": "vitest",
    "web": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "db:init": "tsx src/db/schema.ts",
    "db:migrate-json": "tsx src/db/migrate-json.ts",
    "db:migrate": "db-migrate up",
    "db:migrate:down": "db-migrate down",
    "db:migrate:create": "db-migrate create --sql-file"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^25.1.0",
    "axios": "^1.13.4",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "pg": "^8.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.0",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "vitest": "^4.0.18"
  }
}
